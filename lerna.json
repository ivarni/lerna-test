{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "http://localhost:4873/",
      "allowBranch": ["main", "release"],
      "message": "chore(release): publish"
    }
  }
}
